@model Wall2.Models.Users

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">CodingDojo Wall</a>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <!-- <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
      <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li> -->
    </ul>
  </div>
</nav>
<div>
    <h1>Welcome To The CodingDojo Wall!</h1>
</div>
<hr>
<h4>Register</h4>
<div asp-validation-summary="All"></div>
<div>
    <form asp-controller="Home" asp-action="Register" method="post">
    <div class="row">
        <div class="form-group col-md-6">
            <!-- <span asp-validation-for="FirstName"></span> -->
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
        </div>

        <div class="form-group col-md-6">
             <!-- <span asp-validation-for="LirstName"></span> -->
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
        </div>

        <div class="form-group col-md-6">
             <!-- <span asp-validation-for="Email"></span> -->
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="form-group col-md-6">
             <!-- <span asp-validation-for="Password"></span> -->
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
        </div>

        <div class="form-group col-md-6">
             <!-- <span asp-validation-for="ConfirmPassword"></span> -->
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
        </div>
        <input type="submit" class="btn btn-primary">
    </form>
</div>
<hr>
<h4>Login</h4>
<div>
    <div>
        @if(ViewBag.errors != null)
            {
                @foreach(var err in @ViewBag.errors)
                {
                    <p class="bad">@err</p>
                }
            }
    </div>
    <form asp-controller="Home" asp-action="Login" method="post">
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" name="email" class="form-control" />
        </div>

        <div class="form-group col-md-6">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" name="password" class="form-control" />
        </div>
        <input type="submit" value="Submit" class="btn btn-primary">
    </form>

</div>

</div>

